// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  pass      String
  donations Donation[]
}

model Component {
  id            String     @id @default(uuid())
  name          String
  jsxCode       String     @db.Text // Renombrado de html a jsxCode - usar TEXT para contenido largo
  type          String     // Nuevo campo para tipo de componente
  animationCode String?    @db.Text // Nuevo campo para código de animación (opcional) - usar TEXT
  donations     Donation[]
}

model Donation {
  id          String   @id @default(uuid())
  amount      Float
  userId      String
  componentId String
  user        User     @relation(fields: [userId], references: [id])
  component   Component @relation(fields: [componentId], references: [id])

  @@unique([userId, componentId]) // Un usuario solo puede tener una donación por componente
}